<% breadcrumb.add @model.description, edit_backend_form_path(@model) %>
<% breadcrumb.add t('b.edit') %>
<%= render 'backend/breadcrumbs' %>

<%= render 'backend/forms/tabs', active: params[:translation_locale].to_sym %>
<%= render 'backend/general_form_error', object: @translation %>

<%= simple_form_for([:backend, @translation], url: edit_translation_backend_form_path) do |f| %>
  <div class="card">
    <div class="card-header">
      <%= t 'b.content' %>
    </div>

    <div class="card-block">
      <h5 class="card-title">Afhandeling na succesvol verzenden</h5>
      <%= f.input :toggle, as: :button_radios, collection: [:success_message, :redirect_url] %>

      <%= f.input :success_message, as: :ckeditor, label: false, wrapper_html: { data: { 'button_radio_toggle': true } } %>
      <%= f.input :redirect_url, label: false, placeholder: 'Geef de URL op van de pagina waarnaar je wil doorverwijzen', wrapper_html: { class: 'd-none', data: { 'button_radio-toggle': true } } %>
    </div>
  </div>

  <%= render 'backend/form_actions', cancel_url: backend_forms_path %>
<% end %>
