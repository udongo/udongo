<%= render 'backend/general_form_error', object: model %>

<%= simple_form_for [:backend, model] do |f| %>
  <div class="card">
    <div class="card-header">
      <%= t 'b.general' %>
    </div>

    <div class="card-block">
      <div class="row">
        <div class="col-md-6">
          <%= f.input :locale, collection: Udongo.config.i18n.cms.interface_locales, selected: params[:search_locale], include_blank: false %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :term, input_html: { value: params[:term] } %>
        </div>

        <div class="col-md-6">
          <%= f.input :synonyms, as: :string %>
        </div>
      </div>
    </div>
  </div>

  <%= render 'backend/form_actions', cancel_url: backend_search_synonyms_path %>
<% end %>
